<!doctype html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>7h3_5h0p</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="css/main.css">
</head>

<body>

    <header class="header">
        <div class="header__container">
            <div class="shop-logo">
                <a class="shop-logo__link" href="#">
                    <!--=include img\the_shop_logo.svg -->
                </a>
            </div>
            <span class="phone">+7 (812) 2•12•85•06</span>
            <div class="oggetto-logo">
                <a class = "oggetto-logo__link" href="//oggettoweb.com">
                    <!--=include img\oggetto_logo.svg -->
                </a>
            </div>
        </div>
    </header>

    <div class="menu">
        <div class="menu__container">
            <ul class="navigation">

                <%
                const navigationLabels = ["LISP", "OCaml", "JavaScript", "Python", "PHP"];
                const current = 0;
                for(let index in navigationLabels) {
                %>
                    <li class="navigation__item">
                        <% if(index == current){ %>
                        <a class="navigation__link current">
                            <%= navigationLabels[index] %>
                        </a>
                            <%}
                            else { %>
                            <a class="navigation__link" href="/">
                                <%= navigationLabels[index] %>
                            </a>
                        <% } %>
                    </li>
                <% } %>
            </ul>

            <form class="search-form" action="search">
                <input class="search-form__input" type="search" name="search" maxlength="42">
                <button class="search-form__button" type="submit" title="Найти">
                    <!--=include img\icons\search.svg -->
                </button>
            </form>
        </div>
    </div>

    <div class="main">
        <div class="main__container">
            <div id="breadcrumbs" class="breadcrumbs">
                <%
                let breadcrumps = ["LISP", "Одежда", "Футболки"];

                for(let i = 0; i < breadcrumps.length - 1; i++)
                {%>
                    <a class="breadcrumbs__link" href="#"><%= breadcrumps[i] %></a> /
                <% } %>
                <a class="breadcrumbs__link current"><%= breadcrumps.pop() %></a>
            </div>
            <div id="product" class="product">
                <div class="preview">
                    <img id="previewImage" class="preview__image" alt="Предпросмотр" src="img/tshirts/tshirt_white.jpg">
                </div>
                <div id="productInfo" class="info">
                    <div id="name" class="name">
                        Футболка Alien techology
                    </div>
                    <div class="properties">
                        <div id="composition" class="properties__composition">
                            Состав: 100% хлопок, динамическая типизация, польстая нотация
                        </div><br>
                        <div id="production" class="properties__production">
                            Производство: Россия
                        </div>
                    </div>

                    <div class="price">
                        <span id="value" class="price__value">12345</span>
                        <span id="currency" class="price__currency">₽</span>
                    </div>

                    <form id="buyForm" class="buy-form" action="buy">

                        <div class="size">
                            <span class="size__title">Размер:</span>
                            <div class="size-list">
                                <%
                                const sizeStrings = ["XXS", "XS", "S", "M", "L", "XL", "XXL"];
                                const sizes = [0, 1, 2, 3, 4, 5, 6];
                                for(let i of sizes) { %>
                                <input class="size-list__radio" type="radio" name="size" id="size_<%= i %>" value="<%= i %>">
                                <label class="size-list__item" for="size_<%= i %>"> <%= sizeStrings[i] %> </label>
                                <% } %>
                            </div>
                        </div>
                        <div class="color">
                            <span class="color__title">Цвет:</span>
                            <div class="color-list">
                                <%
                                const colorHexCodes = ["ffffff", "ffff00", "22aa44"];
                                const colors = [0, 1, 2];
                                for(let i of colors) { %>
                                    <input class="color-list__radio" type="radio" name="color" id="color_<%= i %>" value="<%= i %>">
                                    <label class="color-list__item" for="color_<%= i %>" style="background-color: #<%= colorHexCodes[i] %>"> </label>
                                <% } %>
                            </div>
                        </div>

                        <input id="buyButton" type="submit" class="buy-button" value="Купить" ><br>
                    </form>

                    <a id="favoriteButton" class="favorite-button noselect" href="#">
                        <!--=include img\icons\filled_heart.svg -->
                        Отложить на потом
                    </a>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="footer__container">
            <div class="support">
                <div class="footer__title">Сервис и поддержка</div>
                <div class="support-part1">
                    <ul class="support-part2__list footer__list">

                        <%const supportPart1Labels = ["Как сделать заказ", "Возврат товара", "Публичная офёрта", "Доставка"];
                        for(let item of supportPart1Labels) { %>
                        <li class="footer__item">
                            <a class="footer__link" href="">
                                <%= item %>
                            </a>
                        </li>
                        <% } %>

                    </ul>
                </div>
                <div class="support-part2">
                    <ul class="support-part2__list footer__list">

                        <% const supportPart2Labels = ["Способы оплаты", "Правила продажи", "Возвра денежных средств", "Вопросы и ответы"];
                        for(let item of supportPart2Labels) { %>
                        <li class="footer__item">
                            <a class="footer__link" href="">
                                <%= item %>
                            </a>
                        </li>
                        <% } %>

                    </ul>
                </div>
            </div>

            <div class="about">
                <div class="footer__title">О компании</div>
                <div class="about-part1">
                    <ul class="about-part1__list footer__list">

                        <% const aboutPart1Labels = ["О нас", "Контакты", "Партнёрам", "Вакансии"];
                        for(let item of aboutPart1Labels) { %>
                        <li class="footer__item">
                            <a class="footer__link" href="">
                                <%= item %>
                            </a>
                        </li>
                        <% } %>

                    </ul>
                </div>
                <div class="about-part2">
                    <ul class="about-part2__list footer__list">

                        <% const aboutPart2Labels = ["Сертификаты", "Преимущества", "Наши скидки"];
                                for(let item of aboutPart2Labels) { %>
                        <li class="footer__item">
                            <a class="footer__link" href="">
                                <%= item %>
                            </a>
                        </li>
                        <% } %>

                    </ul>
                </div>
            </div>

            <div class="services">
                    <ul class="services__list">
                        <li class="services__item">
                            <a class="services__link">
                                <div class="image-block">
                                    <div class="image-block__container">
                                        <!--=include img\icons\delivery.svg -->
                                    </div>
                                </div>
                                бесплатная доставка от 4000 ₽
                            </a>
                        </li>
                        <li class="services__item">
                            <a class="services__link">
                                <div class="image-block">
                                    <div class="image-block__container">
                                        <!--=include img\icons\samples.svg -->
                                    </div>
                                </div>
                                пробники в подарок при каждой покупке
                            </a>
                        </li>
                        <li class="services__item">
                            <a class="services__link">
                                <div class="image-block">
                                    <div class="image-block__container">
                                        <!--=include img\icons\cup.svg -->
                                    </div>
                                </div>
                                акции и подарки за покупку
                            </a>
                        </li>
                    </ul>
            </div>

            <div class="social">
                <ul class="social__list">
                    <li class="social__item">
                        <a class="social__link" href="https://facebook.com">
                            <div class="image-container">
                                <!--=include img\icons\facebook.svg -->
                            </div>
                        </a>
                    </li>
                    <li class="social__item">
                        <a class="social__link" href="https://twitter.com">
                            <div class="image-container">
                                <!--=include img\icons\twitter.svg -->
                            </div>
                        </a>
                    </li>
                    <li class="social__item">
                        <a class="social__link" href="https://instagram.com">
                            <div class="image-container">
                                <!--=include img\icons\instagram.svg -->
                            </div>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="footer__endline">
                <div class="footer__end">
                    2005-2017 © 7h35h0p.ru - модный интернет магазин одежды, обуви и аксессуаров.<br>
                    Все права защищены. Доставка по всей России.
                </div>
            </div>
        </div>
    </footer>
    <script src="js/scripts.js"></script>
</body>

</html>
